<%= turbo_frame_tag dom_id(event) do %>
  <div class='bg-gray-500 max-w-md rounded-lg min-w-[50%] m-2 px-1'>
    <div class='flex flex-row'>
      <img class='max-w-[25%] p-4' src="/images/robot.png" alt="robot">
      <img class='max-w-[25%] p-4' src="/images/<%= event.topic %>.png" alt="<%= event.topic %>">
      <img class='max-w-[25%] p-4' src="/images/robot.png" alt="robot">

      <div class='flex flex-col justify-around'>
        <% if action_name != "show" %>
          <%= link_to "Show this event", event, class: "rounded-lg bg-gray-100 text-black font-medium p-1 m-1" %>
          <%= link_to 'Edit this event', edit_event_path(event), class: "rounded-lg bg-gray-100 text-black font-medium p-1 m-1" %>
        <% end %>
      </div>
    </div>

    
  </div>
<% end %>